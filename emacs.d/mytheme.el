  (vterm-color-magenta (:foreground "#75507B" :background "#AD7FA8"))
  (vterm-color-cyan    (:foreground "#06989A" :background "#34E2E2"))
  (vterm-color-white   (:foreground "#FFFFFF" :background "#FFFFFF"))))

