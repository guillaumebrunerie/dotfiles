  (lsp-lsp-flycheck-info-unnecessary-face (:foreground nil :underline '(:style wave :color "ForestGreen")))
  (flymake-warning (:underline '(:style wave :color "#E70")))
  (eglot-highlight-symbol-face (:background "darkolivegreen"))
